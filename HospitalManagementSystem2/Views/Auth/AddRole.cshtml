@model HMS.Entites.ViewModel.RoleVM 

<form asp-action="AddRole" asp-controller="Auth">


    <div class="container border-3 p-3 mb-3">
        <h1 class=" text-white">Add New Role</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label text-white"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control pt-2 " />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Create" class="btn btn-success w-100" />
            </div>
            <div class="col-5 ">
                <a asp-action="Index" asp-controller="Staff" class="btn btn-primary w-100">Back</a>
            </div>

        </div>


    </div>





</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}