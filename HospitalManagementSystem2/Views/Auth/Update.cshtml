@model HMS.Entites.ViewModel.UpdateRequestVM
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}



<form asp-action="Update" asp-controller="Auth">


    <div class="container border-3 p-3 mb-3">
        <h1 class=" text-white">Update your Profile</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="FullName" class="control-label text-white"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="FullName" class="form-control pt-2 " />
                <span asp-validation-for="FullName" class="text-danger"></span>

            </div>
            <div class="col-2">
                <label asp-for="Address" class="control-label text-white"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="Address" class="form-control pt-2 " />
                <span asp-validation-for="Address" class="text-danger"></span>

            </div>

            <div class="col-2">
                <label asp-for="InsuranceProvider" class="control-label text-white"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="InsuranceProvider" class="form-control pt-2 " />
                <span asp-validation-for="InsuranceProvider" class="text-danger"></span>

            </div>

            <div class="col-2">
                <label asp-for="InsuranceNumber" class="control-label text-white"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="InsuranceNumber" class="form-control pt-2 " />
                <span asp-validation-for="InsuranceNumber" class="text-danger"></span>

            </div>
            <div class="col-2">
                <label asp-for="EmergencyContact" class="control-label text-white"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="EmergencyContact" class="form-control pt-2 " />
                <span asp-validation-for="EmergencyContact" class="text-danger"></span>

            </div>



            <div class="col-5 offset-2">
                <input type="submit" value="Update" class="btn btn-success w-100" />
            </div>
            <div class="col-5 ">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary w-100">Back</a>
            </div>

        </div>


    </div>





</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}