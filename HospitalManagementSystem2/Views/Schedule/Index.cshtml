@model IEnumerable<HMS.Entities.Models.Schedule>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}



<div class="container p-4">

    <div class="row pb-2">

        <div class="col">
            <h1 class="text-white">Schedules List</h1>


        </div>
        <div class="col d-flex justify-content-end pt-1">
            <a asp-controller="Schedule" asp-action="Create" class="btn btn-outline-primary">Add New Schedule <i class="bi bi-window-plus"></i></a>
        </div>

    </div>

    <table class="table table-bordered table-hover table-info">

        <thead>

        <th>Date</th>
        <th>Available From</th>
        <th>Available To</th>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>


                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.AvailableFrom</td>
                    <td>@item.AvailableTo</td>
                    
                    <td> <a asp-action="Update" asp-controller="Schedule" asp-route-id="@item.Id" class="btn btn-success">Update <i class="bi bi-pencil-square"></i></a></td>
                    <td> <a asp-action="ConfirmDelete" asp-controller="Schedule" asp-route-id="@item.Id" class="btn btn-danger">Delete<i class="bi bi-trash"></i></a></td>

                </tr>



            }
        </tbody>

    </table>
</div>
