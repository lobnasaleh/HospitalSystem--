@model IEnumerable<HMS.Entities.Models.MedicalHistory>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="container p-4">

    <div class="row pb-2">

        <div class="col">
            <h1 class="text-white">Medical History List</h1>


        </div>
       

    </div>

    <table class="table table-bordered table-hover table-info">

        <thead>

        <th>Patient's Full Name</th>
        <th>Appointment Date</th>
        <th>Appointment Time</th>
        <th>Diagnosis</th>
        <th>Prescription</th>
        <th>TreatmentPlan</th>


        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Appointment.Patient.FullName</td>
                    <td>@item.Appointment.AppointmentDateTime.ToString("d")</td>
                    <td>@item.Appointment.AppointmentDateTime.ToString("t")</td>
                    <td>@item.Diagnosis</td>
                    <td>@item.Prescription</td>
                    <td>@item.TreatmentPlan</td>
                  

                    <td> <a asp-action="Update" asp-controller="MedicalHistories" asp-route-id="@item.Id" class="btn btn-success">Update <i class="bi bi-pencil-square"></i></a></td>
                  
                </tr>



            }

        </tbody>
        <a asp-action="AppointmentOfDoc" asp-controller="Appointment" class="btn btn-primary w-100">Back</a>

    </table>
</div>
