@model IEnumerable<HMS.Entities.Models.Staff>


<div class="container p-4">

    <div class="row pb-2">

        <div class="col">
            <h1 class="text-white">Staff List</h1>


        </div>
        <div class="col d-flex justify-content-end pt-1">
            <a asp-controller="Staff" asp-action="Create" class="btn btn-outline-primary">Add New Staff Member <i class="bi bi-window-plus"></i></a>
        </div>

    </div>




    <table class="table table-bordered table-hover table-info">

        <thead>
       
        <th>Full Name</th>
        <th>Position</th>
        <th>Qualification</th>
        <th>Department</th>


        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                  
                    <td>@item.FullName</td>
                    <td>@item.Position</td>
                    <td>@item.Qualification</td>
                    <td>@item.Department.Name</td>
                  

                    <td> <a asp-action="Update" asp-controller="Staff" asp-route-id="@item.Id" class="btn btn-success">Update <i class="bi bi-pencil-square"></i></a></td>
                    <td> <a asp-action="Delete" asp-controller="Staff" asp-route-id="@item.Id" class="btn btn-danger">Delete<i class="bi bi-trash"></i></a></td>

                </tr>



            }
        </tbody>

    </table>
</div>
